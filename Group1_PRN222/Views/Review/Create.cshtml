@model Group1_PRN222.Models.Review

<h2>Đánh giá sản phẩm</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Rating (1-5)</label>
        <input asp-for="Rating" class="form-control" min="1" max="5" type="number" required />
    </div>
    <div class="form-group">
        <label>Bình luận</label>
        <textarea asp-for="Comment" class="form-control" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Gửi đánh giá</button>
</form>
