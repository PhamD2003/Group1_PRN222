@model Group1_PRN222.Models.Address

@{
    ViewData["Title"] = "Delete Address";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">Xác nhận xóa địa chỉ</h3>
        </div>
        <div class="card-body">

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }

            <p class="text-danger fw-bold">Bạn có chắc chắn muốn xóa địa chỉ này không? Thao tác này không thể hoàn tác.</p>

            <dl class="row">
                <dt class="col-sm-3">Họ và tên</dt>
                <dd class="col-sm-9">@Model.FullName</dd>

                <dt class="col-sm-3">Số điện thoại</dt>
                <dd class="col-sm-9">@Model.Phone</dd>

                <dt class="col-sm-3">Đường</dt>
                <dd class="col-sm-9">@Model.Street</dd>

                <dt class="col-sm-3">Thành phố</dt>
                <dd class="col-sm-9">@Model.City</dd>

                <dt class="col-sm-3">Tỉnh/Bang</dt>
                <dd class="col-sm-9">@Model.State</dd>

                <dt class="col-sm-3">Quốc gia</dt>
                <dd class="col-sm-9">@Model.Country</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-action="Index" class="btn btn-secondary">Hủy bỏ</a>
                    <button type="submit" class="btn btn-danger"> Xác nhận xóa</button>
                </div>
            </form>
        </div>
    </div>
</div>
