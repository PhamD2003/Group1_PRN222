@model Group1_PRN222.Models.Address

@{
    ViewData["Title"] = "Address Details";
}

<h1>Address Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Full Name</dt>
        <dd class="col-sm-10">@Model.FullName</dd>
        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>
        <dt class="col-sm-2">Street</dt>
        <dd class="col-sm-10">@Model.Street</dd>
        <dt class="col-sm-2">City</dt>
        <dd class="col-sm-10">@Model.City</dd>
        <dt class="col-sm-2">State</dt>
        <dd class="col-sm-10">@Model.State</dd>
        <dt class="col-sm-2">Country</dt>
        <dd class="col-sm-10">@Model.Country</dd>
    </dl>
</div>
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>